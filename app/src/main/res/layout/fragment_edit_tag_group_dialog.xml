<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content"
    android:layout_margin="20dip">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Tag group name"
        android:singleLine="true"
        android:id="@+id/new_tag_group_name"
        android:textSize="20dip"
        android:padding="10dip"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Hint text"
        android:singleLine="true"
        android:id="@+id/new_tag_group_hint_text"
        android:textSize="16dip"
        android:padding="10dip"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Use when?"
            android:textSize="16dip"
            android:layout_weight="1"
            android:padding="10dip"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:id="@+id/new_tag_group_in_use"
            android:layout_weight="1"></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Mandatory tag selection"
            android:textSize="16dip"
            android:layout_weight="1"
            android:padding="10dip"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:id="@+id/new_tag_group_mandatory">
        </Spinner>

    </LinearLayout>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Single tag selection constraint"
        android:id="@+id/new_tag_group_single_constraint"
        android:textSize="16dip"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="Display order"
            android:textSize="16dip"
            android:padding="10dip"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:id="@+id/new_tag_group_display_index">
        </Spinner>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="18dip"
            android:padding="15dip"
            android:layout_margin="10dip"
            android:layout_weight="1"
            android:id="@+id/button_cancel"/>

        <Button
            android:layout_width="200dip"
            android:layout_height="wrap_content"
            android:text="OK"
            android:padding="15dip"
            android:layout_margin="10dip"
            android:textSize="18dip"
            android:layout_weight="1"
            android:id="@+id/button_ok"/>

    </LinearLayout>

</LinearLayout>
