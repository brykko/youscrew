<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dip"
    android:layout_margin="40dip">

    <!-- CHOOSE RAT NAME -->
    <EditText
        android:layout_marginTop="10dip"
        android:id="@+id/new_rat_input_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:inputType="text"
        android:textSize="16dip"
        />

    <!-- CHOOSE RAT CODE-->
    <EditText
        android:id="@+id/new_rat_input_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID code"
        android:inputType="text"
        android:textSize="16dip"
        />

    <!-- CHOOSE NUMBER OF TETRODES -->
    <LinearLayout
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Number of tetrodes"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:textSize="16dip"
            android:layout_weight="1"/>

        <Spinner
            android:id="@+id/new_rat_input_num_tetrodes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="2"
            />

    </LinearLayout>

    <!-- CHOOSE MICRONS PER TURN -->
    <LinearLayout
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="\u03BCm per turn"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:textSize="16dip"
            android:layout_weight="1"/>


        <EditText
            android:id="@+id/new_rat_input_um_turn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:inputType="numberDecimal"
            android:text="320"
            android:textSize="16dip"
            android:layout_gravity="right"
            android:gravity="right"
            />

    </LinearLayout>

    <!-- CHOOSE NUMBER OF TETRODES -->
    <LinearLayout
        android:layout_marginTop="10dip"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Screw thread direction"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:textSize="16dip"
            android:layout_weight="1"/>

        <Spinner
            android:id="@+id/new_rat_input_thread_dir"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="2"
            />

    </LinearLayout>

    <!--  SET TETRODES INDEPDENDENTLY MOVEABLE OR NOT -->

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tetrodes independently moveable"
            android:textSize="16dip"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/new_rat_checkbox_tt_independent"
            android:layout_weight="3"
            android:layout_gravity="center_vertical" />

    </LinearLayout>


    <Button
        android:id="@+id/new_rat_button_ok"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:text="OK"
        android:textSize="30dip"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dip"
        android:padding="20dip"/>




</LinearLayout>
